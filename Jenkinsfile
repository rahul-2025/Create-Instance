pipeline    {
    agent any
    stages  {
        stage("build")  {
            steps   {
                echo "We are in build stage now"
            }
        }
        stage("test") {
            steps{
                echo "We are now in test stage"
            }
        }
        stage("deploy") {
            steps{
                echo "We are  now in the final deploy stage"
            }
        }
    }
}